        <quad id="bg" size="180 79" pos="0 -6" bgcolor="{config('colors.ui.background')}" opacity="0.9" z-index="0" />
        <label pos="2 -3" valign="center" textsize="1" text="ðŸ† Local records" z-index="1" textprefix="$s" textfont="RajdhaniMono" />
        <label class="close" pos="177 -3" size="6 6" text="âŒ" textsize="1.2" z-index="2" halign="center" valign="center" textcolor="ffff" focusareacolor1="0000" focusareacolor2="0003" ScriptEvents="1" textfont="RajdhaniMono" />

        <frame pos="2 -9" z-index="2">
            <frame id="window-records">
                {for $i=0; $i<100; $i++}
