{/block}

{block title}
UI-Settings
{/block}

{block content}
<label pos="27 -1" size="27 3" textsize="0.6" text="Hide widgets while driving" halign="right" valign="center"  hidden="1" />
<label pos="29 -1" size="10 3" textsize="0.6" text="" halign="left" valign="center"  hidden="1" />

<label class="text-light" pos="27 -5" size="27 3" textsize="0.6" text="Hide at" halign="right" valign="center"/>
<entry class="form" id="speed" pos="29 -5" size="5 3" textsize="0.6" valign="center"/>
<label class="text-light" pos="35 -5" size="27 3" textsize="0.6" text="kph" valign="center"/>

<label class="text-light" pos="27 -9" size="27 3" textsize="0.6" text="UI scale" halign="right" valign="center" />
<entry class="form" id="scale" pos="29 -9" size="5 3" textsize="0.6" halign="left" valign="center" />
<label class="text-light" pos="35 -9" size="27 3" textsize="0.6" text="%" valign="center" />

<label class="btn-success save" pos="25 -15" size="12 4" textsize="0.6" text=" Save" ScriptEvents="1"/>
{/block}

<script><!--
{block globals}
{/block}

{block functions}
Void save(){
    declare speedLabel <=> (Page.MainFrame.GetFirstChild("speed") as CMlEntry);
    declare scaleLabel <=> (Page.MainFrame.GetFirstChild("scale") as CMlEntry);
    declare UISettings_V2 newSettings;
    newSettings.hide = True;
    newSettings.speed = TL::ToInteger(speedLabel.Value);
    newSettings.scale = TL::ToReal(scaleLabel.Value) / 100.0;
    if(newSettings.scale > 1.2){
        newSettings.scale = 1.2;
        scaleLabel.SetText("" ^ TL::ToInteger("" ^ (newSettings.scale * 100)), False);
    }
    if(newSettings.scale < 0.5){
        newSettings.scale = 0.5;
        scaleLabel.SetText("" ^ TL::ToInteger("" ^ (newSettings.scale * 100)), False);
    }
    TriggerPageAction("ui.save," ^ newSettings.tojson());
}
{/block}

{block loop}
{/block}

{block bootScript}
if(settings.speed == 0){
    settings.hide = True;
    settings.speed = 10;
    settings.scale = 1.0;
}

declare speedEntry <=> (Page.MainFrame.GetFirstChild("speed") as CMlEntry);
declare scaleEntry <=> (Page.MainFrame.GetFirstChild("scale") as CMlEntry);
speedEntry.SetText("" ^ settings.speed, False);
scaleEntry.SetText("" ^ TL::ToInteger("" ^ (settings.scale * 100)), False);
{/block}

{block pendingEvents}
if(event.Control.HasClass("save") && event.Type == CMlScriptEvent::Type::MouseClick){
    save();
}
{/block}
--></script>
