    <frame id="widget" pos="{config('dedimania.pos')}" size="40 60" scale="{config('dedimania.scale')}">
        <quad class="widget" z-index="-1" size="40 60" bgcolor="{config('colors.ui.background')}" opacity="0.8" ScriptEvents="1"/>
